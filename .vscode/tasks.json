{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "stb_image.c",
                "-I",
                "include\\",
                "-Llib",
                "-lglew32s",
                "-lSDL2main",
                "-lSDL2",
                "-o",
                "main.cpp.exe",
                "-lopengl32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "buildLinux",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "stb_image.c",
                "-I",
                "include/",
                "-Llib",
                "-lGLEW",
                "-lSDL2main",
                "-lSDL2",
                "-o",
                "main.cpp.out",
                "-lOpenGL"
            ],
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\main.cpp.exe",
            "problemMatcher": []
        }
    ]
}